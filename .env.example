# Molt Wars - Environment Configuration
# Copy this file to .env and configure for your environment

# =============================================================================
# ENVIRONMENT
# =============================================================================
# Set to 'production' for live deployment
NODE_ENV=production

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Enable/disable wallet authentication
# IMPORTANT: Set to true in production!
AUTH_ENABLED=true

# Admin secret for protected endpoints (required in production)
# Generate with: openssl rand -hex 32
# IMPORTANT: Keep this secret and never commit to version control!
#
# ROTATION:
# 1. Generate new: openssl rand -hex 32
# 2. Update .env with new value
# 3. Restart server
# 4. Update any scripts using the old secret
ADMIN_SECRET=

# Skip token balance check (useful before token deployment)
# Set to true to only verify signatures, not balances
SKIP_TOKEN_CHECK=false

# =============================================================================
# SOLANA CONFIGURATION
# =============================================================================
# Solana RPC endpoint
# Use mainnet for production, devnet for testing
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# $MOLTIUM token mint address (set when deployed on Pump.fun)
# Leave empty before token deployment
MOLTIUM_MINT_ADDRESS=

# Maximum wallets per IP address (anti-spam)
MAX_WALLETS_PER_IP=3

# Cache token balance for this many seconds (reduces RPC calls)
BALANCE_CACHE_TTL=60

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Server port
PORT=3000

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins for CORS
# Leave empty to allow all origins (not recommended for production)
# Example: https://molt-of-empires.com,https://www.molt-of-empires.com
CORS_ALLOWED_ORIGINS=

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
# Require authentication for WebSocket chat
# Set to true to prevent anonymous chat messages
WS_CHAT_AUTH_REQUIRED=true

# =============================================================================
# RATE LIMITING
# =============================================================================
# Enable/disable rate limiting (default: true)
RATE_LIMIT_ENABLED=true
# Read requests per second (GET/HEAD) - default: 20
RATE_LIMIT_READ=20
# Write requests per second (POST/PUT/DELETE) - default: 10
RATE_LIMIT_WRITE=10
# Burst multiplier (allows short bursts above base rate) - default: 1.5
RATE_LIMIT_BURST_FACTOR=1.5

# =============================================================================
# SECURITY LOGGING
# =============================================================================
# Enable verbose security event logging (for debugging)
DEBUG_SECURITY=false

# =============================================================================
# GOOGLE API (for asset generation scripts)
# =============================================================================
# Google API key for Imagen/Veo asset generation
# Only needed if running generate-art.js, gen-ship-*.js, or generate-research-videos.js
GOOGLE_API_KEY=
